			<li><a href="#">Cuenta</a></li>
			<li><a href="#">Men√∫</a></li>
		</ul>
	</nav>
</header>

<script>
	const $header = document.querySelector('#landing-header') as HTMLElement; // El $ se usa para indicar que es un elemento del DOM

	// Usaremos un Intersection Observer
	const observerOptions = {
		root: null, 
		rootMargin: '0px',// En caunto se vea el elemento
		threshold: 0.90,// Porcentage de visibilidad
	}

	const observer = new IntersectionObserver(entries => {
		entries.forEach(entry =>{
			const { isIntersecting } = entry;
			if (isIntersecting) {
				const color = entry.target.getAttribute('data-header-color');
				$header.style.color = color
			}
		})
	}, observerOptions)

	const $sections = document.querySelectorAll('.landing-section');
	$sections.forEach(section => observer.observe(section))
</script>